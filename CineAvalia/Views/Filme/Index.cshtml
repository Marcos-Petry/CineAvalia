@{
    ViewData["Title"] = "Filmes";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index - Filmes</title>
    <link rel="stylesheet" href="~/css/Filme.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <p>
        <a asp-action="Create" class="btn-add">Adicionar</a>
    </p>
    <div class="container">
        <h1>Filmes</h1>
        <div class="movie-cards">
            @foreach (var item in Model)
            {
                <div class="movie-card">
                    <div class="movie-section">
                        <div class="movie-image" style="background-image: url('@(item.Imagem != null ? $"data:image/jpeg;base64,{Convert.ToBase64String(item.Imagem)}" : "")')"></div>
                        <div class="movie-content">
                            <h2>@item.Nome</h2>
                            <p>Ano de Lançamento: @item.AnoLancamento</p>
                            <p>Gênero: @item.Genero.Nome</p>
                            <p>Produtora: @item.Produtora.Nome</p>
                            <p>@item.Descricao</p>
                        </div>
                    </div>
                    <div class="movie-buttons">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn">Detalhes</a>
                        <a asp-controller="Avaliacaos" asp-action="Create" asp-route-id="@item.Id" class="btn">Avaliar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn">Excluir</a>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
